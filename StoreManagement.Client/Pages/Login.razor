@page "/login"
@layout EmptyLayout
@using Microsoft.AspNetCore.Components.Authorization
@using System.ComponentModel.DataAnnotations
@inject NavigationManager NavigationManager
@inject StoreManagement.Client.Services.ApiService ApiService
@inject AuthenticationStateProvider AuthProvider

<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-lg border-0" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">

                    <h2 class="fw-bold mb-2 text-uppercase text-primary">Đăng Nhập</h2>
                    <p class="text-muted mb-5">Nhập tên đăng nhập và mật khẩu của bạn!</p>

                    @* Thay OnValidSubmit bằng OnSubmit để bỏ qua kiểm tra hợp lệ *@
                    <EditForm Model="@loginModel" OnSubmit="HandleLogin">
                        @* Đã comment dòng kiểm tra lỗi *@
                        @* <DataAnnotationsValidator /> *@

                        <div class="form-floating mb-4">
                            <InputText id="username" class="form-control" @bind-Value="loginModel.Username" placeholder="Username" />
                            <label for="username">Tên đăng nhập</label>
                            
                            @* Đã comment thông báo lỗi *@
                            @* <ValidationMessage For="@(() => loginModel.Username)" /> *@
                        </div>

                        <div class="form-floating mb-4">
                            <InputText type="password" id="password" class="form-control" @bind-Value="loginModel.Password" placeholder="Password" />
                            <label for="password">Mật khẩu</label>
                            
                            @* Đã comment thông báo lỗi *@
                            @* <ValidationMessage For="@(() => loginModel.Password)" /> *@
                        </div>

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger mb-4">@errorMessage</div>
                        }

                        <button class="btn btn-primary btn-lg w-100 mb-4" type="submit" disabled="@isSubmitting">
                            @if (isSubmitting)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span><span>Đang xử lý...</span>
                            }
                            else
                            {
                                <span>Đăng nhập</span>
                            }
                        </button>

                        <hr class="my-4">
                        <p class="mb-0">Chưa có tài khoản? <a href="customer-register" class="text-primary fw-bold">Đăng ký ngay</a></p>
                    </EditForm>

                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginRequest loginModel = new();
    private string? errorMessage;
    private bool isSubmitting = false;

    public class LoginRequest
    {
        // Đã comment các dòng [Required] để tắt validate
        // [Required(ErrorMessage = "Vui lòng nhập tên đăng nhập")]
        public string Username { get; set; } = "";

        // [Required(ErrorMessage = "Vui lòng nhập mật khẩu")]
        public string Password { get; set; } = "";
    }

    private async Task HandleLogin()
    {
        isSubmitting = true;
        errorMessage = null;

        try
        {
            var result = await ApiService.LoginAsync(loginModel.Username, loginModel.Password);

            if (result.Success && !string.IsNullOrEmpty(result.Token))
            {
                var customAuthProvider = (StoreManagement.Client.Services.CustomAuthenticationStateProvider)AuthProvider;
                await customAuthProvider.MarkUserAsAuthenticated(result.Token);

                // --- PHÂN QUYỀN ĐIỀU HƯỚNG ---
                var role = result.Data?.RoleName; 

                if (role == "Admin" || role == "Manager")
                {
                    NavigationManager.NavigateTo("/inventory"); 
                }
                else if (role == "Staff")
                {
                    NavigationManager.NavigateTo("/timekeeping");
                }
                else
                {
                    // Khách hàng về trang chủ
                    NavigationManager.NavigateTo("/");
                }
            }
            else
            {
                errorMessage = result.Message ?? "Tên đăng nhập hoặc mật khẩu không đúng.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Lỗi hệ thống: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }
}