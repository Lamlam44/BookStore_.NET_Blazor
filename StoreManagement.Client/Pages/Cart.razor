@page "/cart"
@layout StoreManagement.Client.Layout.CustomerLayout
@inject Services.CartService CartService
@inject NavigationManager Navigation
@implements IDisposable

<style>
    .cart-container { max-width: 1200px; margin: 0 auto; padding-bottom: 50px; }
    
    /* Ảnh sản phẩm trong giỏ */
    .cart-item-img { 
        width: 80px; height: 110px; 
        object-fit: cover; 
        border-radius: 8px; 
        border: 1px solid #dee2e6; 
    }

    /* Card tổng tiền */
    .summary-card { 
        background-color: #f8f9fa; 
        border: 1px solid #e9ecef; 
        border-radius: 12px; 
        position: sticky; 
        top: 20px; 
    }

    /* Nút Checkout gradient giống trang Checkout */
    .btn-checkout { 
        background: linear-gradient(135deg, #4e73df 0%, #224abe 100%); 
        border: none; 
        padding: 12px; 
        font-weight: 600; 
        font-size: 1.1rem; 
        transition: all 0.3s; 
        color: white;
    }
    .btn-checkout:hover { 
        transform: translateY(-2px); 
        box-shadow: 0 5px 15px rgba(78, 115, 223, 0.4); 
        color: white;
    }

    .cart-item-row {
        transition: background-color 0.2s;
    }
    .cart-item-row:hover {
        background-color: #fcfcfc;
    }
</style>

<div class="cart-container py-4">
    <h3 class="fw-bold text-primary mb-4">
        <i class="bi bi-cart3 me-2"></i>Giỏ Hàng Của Bạn
    </h3>

    @if (!cartItems.Any())
    {
        @* --- GIAO DIỆN KHI GIỎ HÀNG TRỐNG --- *@
        <div class="text-center py-5 bg-white rounded-3 shadow-sm border">
            <div class="mb-3">
                <img src="/images/empty-cart.svg" style="width: 150px; opacity: 0.5" onerror="this.style.display='none'" />
                <div style="font-size: 4rem; color: #dee2e6" class="d-block d-md-none">
                    <i class="bi bi-cart-x"></i>
                </div>
            </div>
            <h5 class="text-muted fw-bold">Giỏ hàng của bạn đang trống</h5>
            <p class="text-secondary mb-4">Hãy chọn thêm vài cuốn sách hay nhé!</p>
            <button class="btn btn-primary rounded-pill px-4 py-2" @onclick='() => Navigation.NavigateTo("/products")'>
                <i class="bi bi-arrow-left me-2"></i>Tiếp tục mua sắm
            </button>
        </div>
    }
    else
    {
        <div class="row g-4">
            @* --- CỘT TRÁI: DANH SÁCH SẢN PHẨM --- *@
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm rounded-3 overflow-hidden">
                    <div class="card-header bg-white py-3">
                        <div class="row fw-bold text-muted small text-uppercase">
                            <div class="col-6">Sản phẩm</div>
                            <div class="col-2 text-center">Giá</div>
                            <div class="col-2 text-center">Số lượng</div>
                            <div class="col-2 text-end">Xóa</div>
                        </div>
                    </div>
                    <div class="list-group list-group-flush">
                        @foreach (var item in cartItems)
                        {
                            <div class="list-group-item p-3 cart-item-row">
                                <div class="row align-items-center">
                                    @* Thông tin sản phẩm *@
                                    <div class="col-6 d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <img src="@(string.IsNullOrEmpty(item.Image) ? "/images/no-image.png" : item.Image)" 
                                                 alt="@item.ProductName" 
                                                 class="cart-item-img shadow-sm"
                                                 onerror="this.src='/images/no-image.png'" />
                                        </div>
                                        <div class="ms-3">
                                            <h6 class="mb-1 fw-bold text-dark text-truncate" style="max-width: 250px;" title="@item.ProductName">
                                                @item.ProductName
                                            </h6>
                                            @* Nếu có Category hoặc Author thì hiện thêm ở đây *@
                                            <small class="text-muted"><i class="bi bi-tag me-1"></i>Sách</small>
                                        </div>
                                    </div>

                                    @* Giá *@
                                    <div class="col-2 text-center fw-bold text-primary">
                                        @item.Price.ToString("N0") đ
                                    </div>

                                    @* Số lượng *@
                                    <div class="col-2 text-center">
                                        <span class="badge bg-light text-dark border px-3 py-2 fs-6">
                                            x@(item.Quantity)
                                        </span>
                                    </div>

                                    @* Nút xóa *@
                                    <div class="col-2 text-end">
                                        <button class="btn btn-outline-danger btn-sm border-0 rounded-circle" 
                                                title="Xóa khỏi giỏ"
                                                @onclick="() => RemoveFromCart(item.ProductId)">
                                            <i class="bi bi-trash fs-5"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-white py-3">
                        <a href="/products" class="text-decoration-none fw-bold text-primary">
                            <i class="bi bi-arrow-left me-1"></i> Mua thêm sách khác
                        </a>
                    </div>
                </div>
            </div>

            @* --- CỘT PHẢI: TỔNG TIỀN --- *@
            <div class="col-lg-4">
                <div class="summary-card p-4 shadow-sm">
                    <h5 class="fw-bold mb-4">Tóm Tắt Đơn Hàng</h5>
                    
                    <div class="d-flex justify-content-between mb-2 text-muted">
                        <span>Số lượng sản phẩm:</span>
                        <span>@cartItems.Sum(i => i.Quantity)</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3 text-muted">
                        <span>Tạm tính:</span>
                        <span>@total.ToString("N0") đ</span>
                    </div>
                    
                    <hr class="my-3 text-muted" style="border-style: dashed;">

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <span class="fw-bold fs-5">Tổng cộng:</span>
                        <span class="fw-bold fs-4 text-primary">@total.ToString("N0") đ</span>
                    </div>

                    <button class="btn btn-checkout w-100 rounded-pill shadow" @onclick="ProceedToCheckout">
                        <i class="bi bi-credit-card-2-front me-2"></i> TIẾN HÀNH THANH TOÁN
                    </button>
                    
                    <div class="mt-3 text-center">
                        <small class="text-muted"><i class="bi bi-shield-check me-1"></i>Thanh toán an toàn & bảo mật</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private IReadOnlyList<CartItem> cartItems = new List<CartItem>();
    private decimal total = 0;

    protected override void OnInitialized()
    {
        CartService.OnChange += OnCartChanged;
        LoadCart();
    }

    private void LoadCart()
    {
        cartItems = CartService.GetCartItems();
        total = CartService.GetTotal();
    }

    private void OnCartChanged()
    {
        LoadCart();
        StateHasChanged();
    }

    private void RemoveFromCart(string productId)
    {
        // Bạn có thể thêm confirm box ở đây nếu muốn
        CartService.RemoveFromCart(productId);
    }

    private void ProceedToCheckout()
    {
        Navigation.NavigateTo("/checkout");
    }

    public void Dispose()
    {
        CartService.OnChange -= OnCartChanged;
    }
}