@page "/receipts/create"
@layout StoreManagement.Client.Layout.AdminLayout
@attribute [Authorize(Roles = "ADMIN,STAFF")]

@using StoreManagement.Client.Models
@using StoreManagement.Client.Services
@inject IStoreService StoreService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<style>
    .custom-card { border: none; border-radius: 12px; box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15); background: white; }
    .bg-gradient-primary { background: linear-gradient(180deg, #4e73df 10%, #224abe 100%); color: white; }
</style>

<div class="container-fluid p-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-primary"><i class="bi bi-box-seam me-2"></i>Tạo Phiếu Nhập Kho</h3>
        <a href="receipts" class="btn btn-outline-secondary border-0"><i class="bi bi-arrow-left me-1"></i> Quay lại</a>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="custom-card mb-4">
                <div class="card-header bg-gradient-primary py-3">
                    <h6 class="m-0 fw-bold"><i class="bi bi-info-circle me-2"></i>Thông tin chung</h6>
                </div>
                <div class="card-body p-4">
                    <EditForm Model="newReceipt">
                        <DataAnnotationsValidator />
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold small text-secondary">Ngày nhập</label>
                            <InputDate class="form-control" @bind-Value="newReceipt.CreatedAt" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold small text-secondary">Nhà cung cấp (*)</label>
                            <InputSelect class="form-select" @bind-Value="newReceipt.SupplierId">
                                <option value="">-- Chọn NCC --</option>
                                @foreach (var s in suppliers)
                                {
                                    <option value="@s.Id">@s.SupplierName</option>
                                }
                            </InputSelect>
                        </div>

                        <div class="alert alert-info mt-4">
                            <div class="d-flex justify-content-between fw-bold">
                                <span>TỔNG TIỀN:</span>
                                <span class="text-danger fs-5">@newReceipt.TotalCost.ToString("N0") đ</span>
                            </div>
                        </div>

                        <button type="button" class="btn btn-primary w-100 fw-bold py-2 mt-2" 
                                @onclick="HandleSubmit" 
                                disabled="@(!newReceipt.ReceiptDetails.Any())">
                            <i class="bi bi-save me-1"></i> LƯU PHIẾU NHẬP
                        </button>
                    </EditForm>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="custom-card">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="m-0 fw-bold text-primary">Chi tiết nhập hàng</h6>
                </div>
                <div class="card-body p-4">
                    
                    <div class="row g-2 align-items-end mb-4 p-3 bg-light rounded-3 border">
                        <div class="col-md-5">
                            <label class="small fw-bold text-secondary">Chọn Sách</label>
                            <select class="form-select" @bind="currentDetail.BookId">
                                <option value="">-- Chọn sách --</option>
                                @foreach (var b in books)
                                {
                                    <option value="@b.Id">@b.Title (ISBN: @b.Isbn)</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="small fw-bold text-secondary">Số lượng</label>
                            <input type="number" class="form-control" @bind="currentDetail.QuantityReceived" min="1" />
                        </div>
                        <div class="col-md-3">
                            <label class="small fw-bold text-secondary">Giá nhập (đ)</label>
                            <input type="number" class="form-control" @bind="currentDetail.UnitCost" min="0" />
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-success w-100 fw-bold" @onclick="AddItem">
                                <i class="bi bi-plus-lg"></i> Thêm
                            </button>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="bg-light">
                                <tr>
                                    <th>Tên Sách</th>
                                    <th class="text-center">SL</th>
                                    <th class="text-end">Đơn giá</th>
                                    <th class="text-end">Thành tiền</th>
                                    <th class="text-end">Xóa</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in newReceipt.ReceiptDetails)
                                {
                                    <tr>
                                        <td>@item.BookTitle</td>
                                        <td class="text-center">@item.QuantityReceived</td>
                                        <td class="text-end">@item.UnitCost.ToString("N0")</td>
                                        <td class="text-end fw-bold">@((item.QuantityReceived * item.UnitCost).ToString("N0"))</td>
                                        <td class="text-end">
                                            <button class="btn btn-sm btn-outline-danger border-0" @onclick="() => RemoveItem(item)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                                @if (!newReceipt.ReceiptDetails.Any())
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-4 text-muted">Chưa có sách nào được thêm.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private InventoryReceipt newReceipt = new InventoryReceipt { CreatedAt = DateTime.Now };
    private ReceiptDetail currentDetail = new ReceiptDetail { QuantityReceived = 1 };
    
    private List<Supplier> suppliers = new();
    private List<Book> books = new();

    protected override async Task OnInitializedAsync()
    {
        var t1 = StoreService.GetSuppliersAsync();
        var t2 = StoreService.GetBooksAsync();
        
        await Task.WhenAll(t1, t2);
        suppliers = await t1;
        books = await t2;
    }

    private void AddItem()
    {
        if (string.IsNullOrEmpty(currentDetail.BookId)) return;
        
        var selectedBook = books.FirstOrDefault(b => b.Id == currentDetail.BookId);
        if (selectedBook == null) return;

        // Kiểm tra xem sách đã có trong list chưa
        var existing = newReceipt.ReceiptDetails.FirstOrDefault(x => x.BookId == currentDetail.BookId);
        if (existing != null)
        {
            existing.QuantityReceived += currentDetail.QuantityReceived;
            existing.UnitCost = currentDetail.UnitCost; // Cập nhật giá mới nhất
        }
        else
        {
            newReceipt.ReceiptDetails.Add(new ReceiptDetail
            {
                BookId = selectedBook.Id,
                BookTitle = selectedBook.Title,
                QuantityReceived = currentDetail.QuantityReceived,
                UnitCost = currentDetail.UnitCost
            });
        }

        CalculateTotal();
        
        // Reset form nhập dòng
        currentDetail = new ReceiptDetail { QuantityReceived = 1, UnitCost = 0 };
    }

    private void RemoveItem(ReceiptDetail item)
    {
        newReceipt.ReceiptDetails.Remove(item);
        CalculateTotal();
    }

    private void CalculateTotal()
    {
        // Tính tổng tiền dựa trên danh sách chi tiết
        newReceipt.TotalCost = newReceipt.ReceiptDetails.Sum(x => x.QuantityReceived * x.UnitCost);
    }

    private async Task HandleSubmit()
    {
        if (string.IsNullOrEmpty(newReceipt.SupplierId))
        {
            await JSRuntime.InvokeVoidAsync("alert", "Vui lòng chọn Nhà cung cấp!");
            return;
        }

        // QUAN TRỌNG: Tính lại tổng tiền lần cuối trước khi gửi để đảm bảo chính xác
        CalculateTotal();

        var success = await StoreService.CreateReceiptAsync(newReceipt);
        if (success)
        {
            await JSRuntime.InvokeVoidAsync("alert", "Tạo phiếu nhập thành công (Trạng thái: Nháp)!");
            Navigation.NavigateTo("/receipts");
        }
        else
        {
            await JSRuntime.InvokeVoidAsync("alert", "Lỗi khi tạo phiếu nhập! Vui lòng kiểm tra lại.");
        }
    }
}