            </div>
        </div>
    </div>
}

@code {
    private List<Supplier>? suppliers;
    private bool showForm = false;
    private bool showDetail = false;
    private Supplier currentSupplier = new();
    private Supplier detailSupplier = new();
    private string searchTerm = "";

    protected override async Task OnInitializedAsync() => await LoadData();

    private async Task LoadData()
    {
        suppliers = string.IsNullOrWhiteSpace(searchTerm) 
            ? await StoreService.GetSuppliersAsync() 
            : await StoreService.SearchSuppliersAsync(searchTerm);
    }

    private async Task SearchData() => await LoadData();
    private async Task HandleEnterKey(KeyboardEventArgs e) { if (e.Key == "Enter") await SearchData(); }

    private void ShowCreateForm() { currentSupplier = new Supplier(); currentSupplier.Id = string.Empty; showForm = true; }
    private void ShowEditForm(Supplier s) { currentSupplier = new Supplier { Id = s.Id, SupplierName = s.SupplierName, ContactPerson = s.ContactPerson, Phone = s.Phone, Address = s.Address }; showForm = true; }
    private void CancelForm() => showForm = false;
    private void CloseFormOutside() => showForm = false;
    private async Task HandleSubmit() { if (string.IsNullOrEmpty(currentSupplier.Id)) await StoreService.CreateSupplierAsync(currentSupplier); else await StoreService.UpdateSupplierAsync(currentSupplier); showForm = false; await LoadData(); }

    // --- LOGIC FORM CHI TI·∫æT (M·ªöI) ---
    private async Task ShowDetailForm(Supplier s)
    {
        var fullInfo = await StoreService.GetSupplierWithHistoryAsync(s.Id);
        detailSupplier = fullInfo ?? s;
        showDetail = true;
    }
    private void CloseDetail() => showDetail = false;
    private void CloseDetailOutside() => showDetail = false;
}