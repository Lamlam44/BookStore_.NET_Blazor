@page "/"
@layout StoreManagement.Client.Layout.CustomerLayout
@using StoreManagement.Client.Models
@inject StoreManagement.Client.Services.ApiService ApiService
@inject StoreManagement.Client.Services.CartService CartService
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation

<PageTitle>Trang chủ | BookStore</PageTitle>

<style>
    /* Hero Section */
    .hero-banner {
        background: linear-gradient(135deg, #fdfbfb 0%, #ebedee 100%);
        border-radius: 16px;
        padding: 40px;
        margin-bottom: 40px;
        border: 1px solid #eee;
    }

    /* Card Styles */
    .book-card {
        border: none;
        border-radius: 12px;
        transition: all 0.3s ease;
        background: #fff;
        height: 100%;
        overflow: hidden;
        position: relative;
    }
    .book-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.08);
    }
    
    .book-image-container {
        height: 260px;
        padding: 20px;
        background-color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }
    
    .book-img {
        max-height: 100%;
        max-width: 100%;
        object-fit: contain;
        transition: transform 0.5s ease;
        filter: drop-shadow(0 5px 5px rgba(0,0,0,0.1));
    }
    
    .book-card:hover .book-img {
        transform: scale(1.05);
    }

    .card-body-custom {
        padding: 15px;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .book-title {
        font-size: 1rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 2px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        height: 40px;
        line-height: 1.3;
    }
    
    .book-author {
        font-size: 0.85rem;
        color: #6c757d;
        margin-bottom: 10px;
        white-space: nowrap; 
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .price-tag {
        color: #dc3545;
        font-size: 1.1rem;
        font-weight: 800;
    }

    /* Style nút bấm giống trang Products */
    .btn-detail {
        background-color: #f1f3f5;
        color: #495057;
        font-weight: 600;
        border: none;
    }
    .btn-detail:hover { background-color: #e9ecef; color: #000; }
</style>

<div class="container py-4">
    
    @* --- HERO SECTION --- *@
    <div class="hero-banner d-flex align-items-center justify-content-between shadow-sm">
        <div>
            <h1 class="fw-bold text-dark mb-2">Khám Phá Tri Thức Mới</h1>
            <p class="text-muted lead mb-4">Hàng ngàn đầu sách hấp dẫn đang chờ đón bạn.</p>
            <button class="btn btn-danger rounded-pill px-4 fw-bold shadow-sm" @onclick='() => Navigation.NavigateTo("/products")'>
                Xem Tất Cả Sách <i class="bi bi-arrow-right ms-1"></i>
            </button>
        </div>
        <div class="d-none d-md-block text-end">
            <i class="bi bi-journal-bookmark-fill text-danger opacity-25" style="font-size: 8rem;"></i>
        </div>
    </div>

    @* --- HEADER SECTION --- *@
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold m-0 text-dark border-start border-4 border-danger ps-3">Sách Nổi Bật</h4>
        
        <div class="dropdown">
            <button class="btn btn-outline-secondary btn-sm dropdown-toggle rounded-pill px-3" type="button" data-bs-toggle="dropdown">
                Sắp xếp: Mới nhất
            </button>
            <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                <li><a class="dropdown-item" href="#">Mới nhất</a></li>
                <li><a class="dropdown-item" href="#">Bán chạy nhất</a></li>
            </ul>
        </div>
    </div>

    @* --- LOADING STATE --- *@
    @if (books == null)
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
            @for (int i = 0; i < 4; i++)
            {
                <div class="col">
                    <div class="card border-0 shadow-sm" aria-hidden="true">
                        <div style="height: 250px; background-color: #e9ecef;" class="card-img-top placeholder-wave"></div>
                        <div class="card-body">
                            <h5 class="card-title placeholder-glow">
                                <span class="placeholder col-10 rounded"></span>
                            </h5>
                            <p class="card-text placeholder-glow">
                                <span class="placeholder col-6 rounded"></span>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else if (!books.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-search fs-1 text-muted"></i>
            <p class="mt-3 text-secondary">Chưa có sách nào được hiển thị.</p>
        </div>
    }
    else
    {
        @* --- PRODUCT GRID --- *@
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 mb-5">
            @foreach (var item in books)
            {
                <div class="col">
                    <div class="book-card shadow-sm h-100 d-flex flex-column">
                        
                        @* Ảnh sản phẩm *@
                        <div class="book-image-container cursor-pointer" @onclick="() => NavigateToDetail(item.Id)">
                            <img src="@(string.IsNullOrEmpty(item.Image) ? "/images/no-image.svg" : item.Image)" 
                                 class="book-img" 
                                 alt="@item.Title"
                                 onerror="this.src='/images/no-image.svg'" />
                        </div>

                        @* Thông tin *@
                        <div class="card-body-custom pt-0 pb-0">
                            @* Tiêu đề *@
                            <div class="book-title mt-2" title="@item.Title">
                                <a href="/products/@item.Id" class="text-decoration-none text-dark stretched-link">@item.Title</a>
                            </div>
                            
                            @* Tác giả *@
                            <div class="book-author" title="@item.Author">
                                <i class="bi bi-pen-fill me-1 small"></i>
                                @(string.IsNullOrEmpty(item.Author) ? "Đang cập nhật" : item.Author)
                            </div>

                            @* Giá *@
                            <div class="mt-auto d-flex justify-content-between align-items-center mb-2">
                                <span class="price-tag">@item.RetailPrice.ToString("N0") đ</span>
                            </div>
                        </div>

                        @* --- FOOTER CARD (GIỐNG TRANG PRODUCTS) --- *@
                        <div class="card-footer bg-white border-top-0 d-flex gap-2 pb-3 px-3 mt-auto">
                            <button class="btn btn-detail rounded-circle d-flex align-items-center justify-content-center flex-shrink-0" 
                                    style="width: 40px; height: 40px; z-index: 2; position: relative;" 
                                    title="Xem chi tiết"
                                    @onclick="() => NavigateToDetail(item.Id)">
                                <i class="bi bi-eye-fill"></i>
                            </button>
                            <button class="btn btn-danger flex-grow-1 rounded-pill fw-bold shadow-sm d-flex align-items-center justify-content-center gap-2" 
                                    style="position: relative; z-index: 2;"
                                    @onclick:stopPropagation="true" 
                                    @onclick="() => AddToCart(item)">
                                <i class="bi bi-cart-plus-fill"></i> Thêm
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<Book>? books;

    protected override async Task OnInitializedAsync()
    {
        await LoadBooksFromApi();
    }

    private async Task LoadBooksFromApi()
    {
        try
        {
            var res = await ApiService.GetProductsAsync();
            if (res != null && res.Success)
            {
                // Lấy 8-12 sản phẩm mới nhất để hiện trang chủ
                books = res.Data?.Take(12).ToList() ?? new List<Book>();
            }
            else
            {
                books = new List<Book>();
            }
        }
        catch
        {
            books = new List<Book>();
        }
    }

    private void AddToCart(Book b)
    {
        CartService.AddToCart(b);
        ShowToast("Thành công", $"Đã thêm '{b.Title}' vào giỏ");
    }

    private void NavigateToDetail(string id)
    {
        Navigation.NavigateTo($"/products/{id}");
    }

    private void ShowToast(string title, string message)
    {
        var id = $"toast-{Guid.NewGuid():N}";
        var containerId = "toast-container-custom";
        var script = $@"
            (function() {{
                let container = document.getElementById('{containerId}');
                if (!container) {{
                    container = document.createElement('div');
                    container.id = '{containerId}';
                    container.style.position = 'fixed';
                    container.style.top = '80px'; 
                    container.style.right = '20px';
                    container.style.zIndex = '9999';
                    container.style.display = 'flex';
                    container.style.flexDirection = 'column';
                    container.style.gap = '10px';
                    document.body.appendChild(container);
                }}
                const el = document.createElement('div');
                el.id = '{id}';
                el.style.background = '#fff';
                el.style.color = '#333';
                el.style.borderLeft = '5px solid #198754';
                el.style.padding = '15px 20px';
                el.style.borderRadius = '8px';
                el.style.boxShadow = '0 5px 15px rgba(0,0,0,0.15)';
                el.style.fontSize = '14px';
                el.style.minWidth = '300px';
                el.style.opacity = '0';
                el.style.transform = 'translateX(20px)';
                el.style.transition = 'all 0.3s ease';
                el.innerHTML = `<div style='display:flex;align-items:center;gap:10px'>
                                    <i class='bi bi-check-circle-fill' style='color:#198754;font-size:1.2rem'></i>
                                    <div>
                                        <div style='font-weight:700;margin-bottom:2px'>${title}</div>
                                        <div style='color:#666;font-size:0.9rem'>${message}</div>
                                    </div>
                                </div>`;
                container.appendChild(el);
                
                setTimeout(() => {{
                    el.style.opacity = '1';
                    el.style.transform = 'translateX(0)';
                }}, 10);

                setTimeout(() => {{
                    el.style.opacity = '0';
                    el.style.transform = 'translateX(20px)';
                    setTimeout(() => {{ el.remove(); }}, 300);
                }}, 2500);
            }})();
        ";
        _ = JSRuntime.InvokeVoidAsync("eval", script);
    }
}