@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject StoreManagement.Client.Services.CartService CartService
@inject AuthenticationStateProvider AuthProvider
@using Microsoft.AspNetCore.Components.Authorization

<style>
    /* Custom CSS for Layout */
    .brand-text {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: 800;
        letter-spacing: -0.5px;
        background: linear-gradient(45deg, #dc3545, #ff6b6b);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .search-input {
        background-color: #f8f9fa;
        border-color: #e9ecef;
        transition: all 0.3s;
    }
    .search-input:focus {
        background-color: #fff;
        border-color: #dc3545;
        box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.15);
    }

    .nav-link-custom {
        font-weight: 600;
        color: #495057;
        position: relative;
        padding: 0.5rem 1rem;
        transition: color 0.2s;
    }
    .nav-link-custom:hover, .nav-link-custom.active {
        color: #dc3545;
    }
    .nav-link-custom::after {
        content: '';
        position: absolute;
        width: 0;
        height: 2px;
        bottom: 0;
        left: 50%;
        background-color: #dc3545;
        transition: all 0.3s ease-in-out;
        transform: translateX(-50%);
    }
    .nav-link-custom:hover::after {
        width: 80%;
    }

    .icon-btn {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        transition: background 0.2s;
    }
    .icon-btn:hover {
        background-color: #f8f9fa;
        color: #dc3545 !important;
    }

    .footer-link {
        color: #6c757d;
        text-decoration: none;
        transition: color 0.2s;
    }
    .footer-link:hover {
        color: #dc3545;
    }
</style>

<div class="customer-layout d-flex flex-column min-vh-100">
    
    @* --- HEADER --- *@
    <header class="bg-white shadow-sm sticky-top z-3">
        <div class="container py-3">
            <div class="row align-items-center g-3">
                @* 1. LOGO *@
                <div class="col-md-3">
                    <a href="/" class="text-decoration-none d-flex align-items-center">
                        <i class="bi bi-book-half fs-2 text-danger me-2"></i>
                        <h2 class="m-0 brand-text">BOOKSTORE</h2>
                    </a>
                </div>

                @* 2. SEARCH BAR *@
                <div class="col-md-5">
                    <div class="input-group">
                        <input @bind="searchTerm" 
                               @bind:event="oninput" 
                               @onkeydown="HandleEnter"
                               type="text" 
                               class="form-control rounded-pill rounded-end search-input border-end-0 ps-4" 
                               placeholder="Bạn muốn tìm sách gì hôm nay?..." />
                        <button class="btn btn-outline-light border border-start-0 rounded-pill rounded-start pe-4 bg-white text-secondary" 
                                @onclick="DoSearch" 
                                style="border-color: #e9ecef !important; z-index: 4;">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>

                @* 3. USER & CART *@
                <div class="col-md-4 d-flex justify-content-end align-items-center gap-3">
                    
                    @* User Dropdown *@
                    <AuthorizeView>
                        <Authorized Context="userAuth">
                            <div class="dropdown">
                                <a href="#" class="text-decoration-none text-dark d-flex align-items-center gap-2" data-bs-toggle="dropdown">
                                    <div class="icon-btn bg-light text-secondary">
                                        <i class="bi bi-person-fill fs-5"></i>
                                    </div>
                                    <div class="d-none d-lg-block lh-1 text-start">
                                        <small class="text-muted" style="font-size: 10px;">Xin chào,</small>
                                        <div class="fw-bold text-truncate" style="max-width: 100px;">@userAuth.User.Identity?.Name</div>
                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-2 rounded-3">
                                    <li><h6 class="dropdown-header">Tài khoản</h6></li>
                                    <li><a class="dropdown-item" href="profile"><i class="bi bi-person-gear me-2"></i>Hồ sơ cá nhân</a></li>
                                    <li><a class="dropdown-item" href="order-history"><i class="bi bi-clock-history me-2"></i>Lịch sử đơn hàng</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <button class="dropdown-item text-danger" @onclick="Logout">
                                            <i class="bi bi-box-arrow-right me-2"></i>Đăng xuất
                                        </button>
                                    </li>
                                </ul>
                            </div>
                        </Authorized>
                        <NotAuthorized>
                            <a href="login" class="text-decoration-none text-dark d-flex align-items-center gap-2 icon-link-hover">
                                <div class="icon-btn border">
                                    <i class="bi bi-person fs-5"></i>
                                </div>
                                <div class="d-none d-lg-block lh-1 text-start">
                                    <div class="fw-bold" style="font-size: 13px;">Đăng nhập</div>
                                    <small class="text-muted" style="font-size: 11px;">Tài khoản</small>
                                </div>
                            </a>
                        </NotAuthorized>
                    </AuthorizeView>

                    @* Vertical Divider *@
                    <div class="vr mx-1 text-muted opacity-25"></div>

                    @* Cart Button *@
                    <a href="cart" class="text-decoration-none text-dark position-relative d-flex align-items-center gap-2">
                        <div class="icon-btn border position-relative">
                            <i class="bi bi-bag fs-5"></i>
                            @if (CartService.GetCartItems().Count > 0)
                            {
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger border border-light" style="font-size: 0.6rem;">
                                    @CartService.GetCartItems().Count
                                </span>
                            }
                        </div>
                        <div class="d-none d-lg-block lh-1 text-start">
                            <div class="fw-bold" style="font-size: 13px;">Giỏ hàng</div>
                            <small class="text-muted" style="font-size: 11px;">
                                @(CartService.GetTotal().ToString("N0")) đ
                            </small>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        
        @* --- NAVIGATION MENU --- *@
        <div class="border-top bg-white">
            <div class="container">
                <nav class="nav">
                    <a class="nav-link nav-link-custom" href="/"><i class="bi bi-house-door me-1"></i>TRANG CHỦ</a>
                    <a class="nav-link nav-link-custom" href="products"><i class="bi bi-book me-1"></i>TẤT CẢ SÁCH</a>
                </nav>
            </div>
        </div>
    </header>

    @* --- MAIN BODY --- *@
    <main class="flex-grow-1" style="background-color: #f5f7fa;">
        <div class="container py-4">
            @Body
        </div>
    </main>

    @* --- FOOTER --- *@
    <footer class="bg-white pt-5 border-top text-secondary">
        <div class="container pb-4">
            <div class="row g-4">
                <div class="col-lg-4 col-md-6">
                    <h5 class="fw-bold text-dark mb-3">BOOKSTORE</h5>
                    <p class="small">
                        Bookstore - Nơi hội tụ những cuốn sách hay nhất. Chúng tôi cam kết mang đến tri thức và niềm vui đọc sách cho mọi nhà.
                    </p>
                    <div class="d-flex gap-3 mt-3">
                        <a href="#" class="text-secondary fs-5"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-secondary fs-5"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-secondary fs-5"><i class="bi bi-youtube"></i></a>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-6">
                    <h6 class="fw-bold text-dark mb-3">Về chúng tôi</h6>
                    <ul class="list-unstyled small d-flex flex-column gap-2">
                        <li><a href="#" class="footer-link">Giới thiệu</a></li>
                        <li><a href="#" class="footer-link">Tuyển dụng</a></li>
                        <li><a href="#" class="footer-link">Điều khoản</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-3 col-6">
                    <h6 class="fw-bold text-dark mb-3">Hỗ trợ</h6>
                    <ul class="list-unstyled small d-flex flex-column gap-2">
                        <li><a href="#" class="footer-link">Chính sách đổi trả</a></li>
                        <li><a href="#" class="footer-link">Chính sách bảo mật</a></li>
                        <li><a href="#" class="footer-link">Hướng dẫn mua hàng</a></li>
                    </ul>
                </div>
                <div class="col-lg-4 col-md-12">
                    <h6 class="fw-bold text-dark mb-3">Đăng ký nhận tin</h6>
                    <div class="input-group mb-2">
                        <input type="email" class="form-control" placeholder="Email của bạn...">
                        <button class="btn btn-danger" type="button">Gửi</button>
                    </div>
                    <small class="text-muted">Nhận thông tin sách mới và khuyến mãi sớm nhất.</small>
                </div>
            </div>
        </div>
        <div class="bg-light py-3 border-top">
            <div class="container text-center">
                <small class="text-muted">&copy; 2024 BookStore System. All rights reserved.</small>
            </div>
        </div>
    </footer>
</div>

@code {
    protected override void OnInitialized()
    {
        CartService.OnChange += StateHasChanged;
    }
    public void Dispose()
    {
        CartService.OnChange -= StateHasChanged;
    }

    private string searchTerm = string.Empty;

    private void HandleEnter(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            DoSearch();
        }
    }

    private void DoSearch()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
        {
            Navigation.NavigateTo("/products");
        }
        else
        {
            Navigation.NavigateTo($"/products?search={System.Net.WebUtility.UrlEncode(searchTerm)}");
        }
    }

    private async Task Logout()
    {
        if (AuthProvider is StoreManagement.Client.Services.CustomAuthenticationStateProvider customAuthProvider)
        {
            await customAuthProvider.MarkUserAsLoggedOut();
        }
        Navigation.NavigateTo("/");
    }
}