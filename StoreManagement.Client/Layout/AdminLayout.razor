@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthProvider

<style>
    /* --- Admin Layout Variables --- */
    :root {
        --sidebar-width: 250px;
        --topbar-height: 70px;
        --primary-gradient: linear-gradient(180deg, #4e73df 10%, #224abe 100%);
        --bg-body: #f8f9fc;
        --text-sidebar: rgba(255, 255, 255, 0.8);
    }

    /* Layout Structure */
    .admin-wrapper {
        display: flex;
        width: 100%;
        min-height: 100vh;
        background-color: var(--bg-body);
    }

    /* Sidebar Styling */
    .sidebar-wrapper {
        width: var(--sidebar-width);
        background: var(--primary-gradient);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        position: fixed; /* Cố định sidebar */
        top: 0;
        left: 0;
        z-index: 100;
        box-shadow: 2px 0 10px rgba(0,0,0,0.1);
        transition: all 0.3s;
    }
    
    /* Content Area */
    .content-wrapper {
        flex-grow: 1;
        margin-left: var(--sidebar-width); /* Đẩy nội dung sang phải */
        display: flex;
        flex-direction: column;
        transition: all 0.3s;
    }

    /* Topbar Styling */
    .topbar {
        height: var(--topbar-height);
        background: white;
        box-shadow: 0 .15rem 1.75rem 0 rgba(58,59,69,.15);
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 1.5rem;
        position: sticky;
        top: 0;
        z-index: 99;
    }

    /* User Profile Dropdown simulation */
    .user-profile {
        display: flex;
        align-items: center;
        cursor: pointer;
        padding: 5px 10px;
        border-radius: 30px;
        transition: background 0.2s;
    }
    .user-profile:hover {
        background-color: #f8f9fc;
    }
    .user-avatar {
        width: 35px;
        height: 35px;
        background-color: #4e73df;
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        margin-left: 10px;
    }

    /* Footer */
    .footer {
        background: white;
        padding: 1rem;
        text-align: center;
        color: #858796;
        font-size: 0.9rem;
        margin-top: auto;
    }

    /* Mobile Responsive */
    @@media (max-width: 768px) {
        .sidebar-wrapper { transform: translateX(-100%); }
        .content-wrapper { margin-left: 0; }
    }
</style>

<div class="admin-wrapper">
    <aside class="sidebar-wrapper">
        <div class="d-flex align-items-center justify-content-center py-3 border-bottom border-white border-opacity-10">
             @* Bạn có thể đổi Icon hoặc Tên Store ở đây *@
            <a href="/" class="text-white text-decoration-none d-flex align-items-center fw-bold fs-5">
                <i class="bi bi-book-half fs-3 me-2"></i> BookStore
            </a>
        </div>
        
        <div class="flex-grow-1 overflow-auto">
            <NavMenu />
        </div>
        
        <div class="p-3 text-center text-white-50 small">
            v1.0.0
        </div>
    </aside>

    <div class="content-wrapper">
        
        <nav class="topbar">
            <div class="d-flex align-items-center">
                <h5 class="m-0 text-secondary d-none d-md-block">Hệ thống quản trị</h5>
                <button class="btn btn-link d-md-none text-dark"><i class="bi bi-list fs-4"></i></button>
            </div>

            <AuthorizeView>
                <Authorized Context="auth">
                    <div class="dropdown">
                        <div class="user-profile" data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="d-flex flex-column text-end me-2 d-none d-sm-block">
                                <span class="text-dark fw-bold small">@auth.User.Identity?.Name</span>
                                <span class="text-muted" style="font-size: 0.75rem;">Administrator</span>
                            </div>
                            <div class="user-avatar">
                                <i class="bi bi-person-fill"></i>
                            </div>
                        </div>
                        <ul class="dropdown-menu dropdown-menu-end shadow border-0 animated--grow-in">
                            <li><h6 class="dropdown-header text-uppercase">Tài khoản</h6></li>
                            <li><a class="dropdown-item" href="profile"><i class="bi bi-person me-2 text-gray-400"></i> Hồ sơ</a></li>
                            <li><a class="dropdown-item" href="settings"><i class="bi bi-gear me-2 text-gray-400"></i> Cài đặt</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <button class="dropdown-item text-danger fw-bold" @onclick="Logout">
                                    <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                                </button>
                            </li>
                        </ul>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <a href="login" class="btn btn-primary btn-sm rounded-pill px-3 shadow-sm">Đăng nhập</a>
                </NotAuthorized>
            </AuthorizeView>
        </nav>

        <main class="p-4">
            @Body
        </main>

        <footer class="footer">
            <span>Copyright &copy; BookStore Manager @DateTime.Now.Year</span>
        </footer>
    </div>
</div>

@code {
    private async Task Logout()
    {
        // Gọi hàm xác nhận nếu muốn (sử dụng JS Interop)
        // bool confirm = await JSRuntime.InvokeAsync<bool>("confirm", "Bạn có chắc chắn muốn đăng xuất?");
        // if (!confirm) return;

        if (AuthProvider is StoreManagement.Client.Services.CustomAuthenticationStateProvider customAuthProvider)
        {
            await customAuthProvider.MarkUserAsLoggedOut();
        }
        Navigation.NavigateTo("/login");
    }
}